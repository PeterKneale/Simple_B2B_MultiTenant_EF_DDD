@page
@model Simple.Web.Pages.Auth.RegisterPage

@await Html.PartialAsync("Shared/_ValidationSummary")

<form method="post" class="card">
    <div class="card-body">
        @Html.EditorFor(x => x.Model.TenantName, null, new { autofocus = "autofocus" })
        @Html.EditorFor(x => x.Model.FirstName)
        @Html.EditorFor(x => x.Model.LastName)
        @Html.EditorFor(x => x.Model.Email)
        @Html.EditorFor(x => x.Model.Password)
    </div>
    <div class="card-footer">
        <input type="submit" value="Register" class="btn btn-primary ms-auto" data-testid="Register"/>
    </div>
</form>