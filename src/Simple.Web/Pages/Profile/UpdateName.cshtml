@page
@model Simple.Web.Pages.Profile.UpdateNamePage

<form method="post" class="card">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Details</h3>
        </div>
        <div class="card-body">
            @Html.EditorFor(x => x.Model.FirstName, null, new { autofocus = "autofocus" })
            @Html.EditorFor(x => x.Model.LastName)
        </div>
        <div class="card-footer text-end">
            <div class="form-group">
                <a asp-page="Index" class="btn btn-link">Cancel</a>
                <input type="submit" value="Update" class="btn btn-primary" data-testid="UpdateButton"/>
            </div>
        </div>
    </div>
</form>